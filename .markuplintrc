{
  "parser": {
    ".tsx$": "@markuplint/jsx-parser"
  },
  "excludeFiles": [
    ".next/**/*.html"
  ],
  "specs": [
    "@markuplint/react-spec"
  ],
  "rules": {
    "attr-duplication": true,
    "character-reference": true,
    "deprecated-attr": true,
    "deprecated-element": true,
    "doctype": true,
    "id-duplication": true,
    "permitted-contents": true,
    "required-attr": true,
    "invalid-attr": true,
    "landmark-roles": true,
    "required-h1": true,
    "wai-aria": true,
    "class-naming": false,
    "attr-equal-space-after": true,
    "attr-equal-space-before": true,
    "attr-spacing": true,
    "attr-value-quotes": true,
    "case-sensitive-attr-name": false,
    "case-sensitive-tag-name": false,
    "indentation": false
  }
}
